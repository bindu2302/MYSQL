-- Views: Views are virtual tables that do not store data themselves but display data from Base tables. They provide an alternative way to present data.
-- syntax: Create VIEW VIEW_NAME AS ....


-- User Table
create table Users(user_id int, user_name varchar(20), account_number int);

insert into Users values (1,'Alice',101),(2,'Bob',102),(3,'Charlie',103);

select * from Users;

-- Bank table
create table Bank(account_numer int, account_holder varchar(20), balance int);

insert into Bank values(101,'Alice',50000),(102,'Bob',120000),(103,'Charlie',90000);

select * from Bank;

-- view

Create view Userid_balance AS
select Users.user_id,Bank.balance from Users 
inner join Bank on Users.account_number = Bank.account_numer;

select * from Userid_balance;

select user_id,balance from Userid_balance
where balance > 80000;

-- drop view
drop view Userid_balance;




-- synonym: A synonym is an alias or alternative name for a database object (like a table, view, sequence, procedure, etc.).
 
create synonym emp for Employee;

selct * from emp;


-- sequence:A sequence is a database object that generates unique numeric values, typically used for primary keys.


create sequence ids
start with 100
increment by 1
maxvalue 500
nocycle;

create table employee(emp_id int, emp_name varchar2(40));

insert into employee values(ids.nextval,'Akash');

select * from employee; -- 100  Akash
